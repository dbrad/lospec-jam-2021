{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "noImplicitAny": true,
    "noEmit": true,
    "watch": true,
    "strict": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules/",
    "node_modules/**/*.ts"
  ],
  "include": [
    "src/ts/**/*.ts"
  ]
}